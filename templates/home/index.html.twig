{% extends 'base.html.twig' %}

{% block title %}World of Pets - Accueil{% endblock %}

{% block body %}
 <h1>Bienvenue</h1>

 <div>
    <h2>Derniers articles</h2>
    <ul style="display: flex;">
        {% for produit in produits %}
       
        <li>
            {% if produit.images is not empty %}
                <!--récupérer la 1er image uniquement -->
                {% set image = produit.images.first() %}
                <img src="{{ asset('uploads/images/' ~ image.nomImage) }}" height="auto" width="300px" alt="Image de {{ image.nomImage }}">
                

            {% else %}
            <img src="{{ asset('uploads/images/defaut.jpg') }}" height="auto" width="300px" alt="Mon image">
            {% endif %}
            <p>{{ produit.nomProduit }}</p>
            <p>{{ produit.prix }}€</p>
            <div><a href="">Acheter</a></div>
            <div><a href="{{path('edit_produit', {'id': produit.id })}}">editer</a></div>
        </li>

        {% endfor %}
    </ul>
 </div>
 
{% endblock %}
